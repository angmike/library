extends layout

block content
    form(action="/users/login" method='post')
        label(for="email") Email
        input(type="text" id='email' name='email' placeholder='email' value=(user)?user.email: '')
        label(for="password")
        input(type="password" id='password' name='password' placeholder='password' value=(user)?user.password: '')
        if redir
            input(name='redir', value=redir, hidden)
        button(type='submit') submit
